<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mpf.mypersonalfinances.controllers.investments.AddInvestmentActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/investment_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Name"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/investment_type_text_view"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_investment_name_editText" />

    <EditText
        android:id="@+id/add_investment_name_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/investment_name_text_view" />

    <TextView
        android:id="@+id/investment_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Type"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/add_investment_buy_date_text_view"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/investment_name_text_view"
        app:layout_constraintTop_toTopOf="@+id/add_investment_type_spinner" />

    <Spinner
        android:id="@+id/add_investment_type_spinner"
        android:layout_width="0dp"
        android:layout_height="45dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/add_investment_name_editText"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/add_investment_name_editText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/add_investment_name_editText" />

    <TextView
        android:id="@+id/add_investment_buy_date_text_view"
        android:layout_width="86dp"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Buy Date"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/add_investment_price_editText"
        app:layout_constraintRight_toRightOf="@+id/investment_type_text_view"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/add_investment_date_button"
        app:layout_constraintLeft_toRightOf="@+id/investment_type_text_view" />

    <Button
        android:id="@+id/add_investment_date_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="26dp"
        android:text="Today"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/add_investment_price_editText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="44dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="39dp"
        app:layout_constraintLeft_toLeftOf="@+id/add_investment_type_spinner"
        app:layout_constraintTop_toTopOf="@+id/add_investment_type_spinner" />

    <TextView
        android:id="@+id/add_investment_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Price"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/add_investment_quantity_text_view"
        android:layout_marginTop="44dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="44dp"
        app:layout_constraintLeft_toLeftOf="@+id/add_investment_buy_date_text_view"
        app:layout_constraintTop_toTopOf="@+id/add_investment_buy_date_text_view" />

    <EditText
        android:id="@+id/add_investment_price_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/add_investment_type_spinner"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/add_investment_type_spinner"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/add_investment_type_spinner" />

    <TextView
        android:id="@+id/add_investment_quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Qtty"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/add_investment_yield_text_view"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/add_investment_price_text_view"
        app:layout_constraintTop_toTopOf="@+id/add_investment_quantity_editText" />

    <EditText
        android:id="@+id/add_investment_quantity_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/add_investment_price_editText"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/add_investment_price_editText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/add_investment_price_editText" />

    <TextView
        android:id="@+id/add_investment_yield_text_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Yield"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/add_investment_maturity_text_view"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/add_investment_quantity_text_view"
        app:layout_constraintTop_toTopOf="@+id/add_investment_yield_editText" />

    <EditText
        android:id="@+id/add_investment_yield_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/add_investment_quantity_editText"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/add_investment_quantity_editText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/add_investment_quantity_editText" />

    <TextView
        android:id="@+id/add_investment_maturity_text_view"
        android:layout_width="86dp"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Maturity"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/add_investment_maturity_button"
        app:layout_constraintRight_toRightOf="@+id/add_investment_yield_text_view"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/add_investment_yield_editText"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toRightOf="@+id/add_investment_yield_text_view" />

    <Button
        android:id="@+id/add_investment_maturity_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:text="None"
        app:layout_constraintLeft_toRightOf="@+id/add_investment_maturity_text_view"
        app:layout_constraintRight_toRightOf="@+id/add_investment_yield_editText"
        app:layout_constraintTop_toBottomOf="@+id/add_investment_yield_editText"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/add_investment_add_button"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="360dp"
        android:background="@android:color/holo_green_light"
        android:text="Add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
