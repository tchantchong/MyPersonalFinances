<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mpf.mypersonalfinances">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyPersonalFinancesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".features.MenuActivity" />
        <activity android:name=".auth.RegisterActivity" />
        <activity android:name=".features.finances.FinancesActivity" />
        <activity
            android:name=".features.finances.AddExpenseActivity"
            android:theme="@style/AppTheme.ManageExpenseOverlay" />
        <activity
            android:name=".features.finances.RemoveExpenseActivity"
            android:theme="@style/AppTheme.ManageExpenseOverlay" />
        <activity
            android:name=".features.finances.AddIncomeActivity"
            android:theme="@style/AppTheme.ManageExpenseOverlay" />
    </application>

</manifest>